---
import LinkBase from "@components/base/LinkBase.astro";

export interface NavItem {
  title: string;
  url: string;
  submenu?: Array<NavItem>;
}

const navItems: Array<NavItem> = [
  { title: "Inicio1", url: "/" },
  { title: "Acerca de", url: "/acerca",  submenu: [
      { title: "SubLink 1", url: "/sublink1" },
      { title: "SubLink 2", url: "/sublink2" },
      { title: "SubLink 3", url: "/sublink3" },
    ]  },
  { 
    title: "Racks Industriales", 
    url: "/racks-industriales"
   
  },
  { title: "Sistemas de Almacen", url: "/sistemas-almacenes" },
  { title: "Contacto", url: "/contacto" },
];
---

<nav id="menu" nav-is-open="false">
    <ul class="lg:flex gap-4">
      {navItems.map(({ title, url, submenu }) => (
        <li>
          <a href={url}>{title}</a>
          {submenu && (
            <ul class="hidden group-hover:block ">
              {submenu.map(({ title, url }) => (
                <li class="group relative">
                  <a href={url}>{title}</a>
                </li>
              ))}
            </ul>
          )}
        </li>
      ))}
    </ul>
  </nav>


  <nav id="menu" nav-is-open="false">
    <ul class="space-y-2 lg:flex gap-4">
      {navItems.map(({ title, url, submenu }) => (
        <li class="group relative ">
            <LinkBase href={url}>{title}</LinkBase>
         
          {submenu && (
            <ul class="relative lg:absolute left-0 hidden group-hover:inline mt-2 bg-white shadow-lg rounded-lg p-4 transition-all duration-300 ease-in-out transform group-hover:scale-100 group-hover:opacity-100 group-hover:translate-y-0 scale-95 opacity-0 translate-y-2" >
              {submenu.map(({ title, url }) => (
                <li>
                 <LinkBase href={url}>{title}</LinkBase>
                </li>
              ))}
            </ul>
          )}
        </li>
      ))}
    </ul>


   