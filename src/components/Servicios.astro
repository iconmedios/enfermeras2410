---
import { servicios } from "@lib/menus.json"



const { class: className, ...props } = Astro.props;

---
<ul class:list={["grid md:grid-cols-2 lg:grid-cols-4 gap-4 p-4 bg-soft-40 border-2 border-soft-60 ", className]} {...props} >
    {servicios.map( ({title, link })=> (
        <li class="flex icc bg-soft-20 "><a class="flex h-60 icc bg-main-100 w-full text-white/90 text-center p-2" href={link}>{title}</a></li> 
    ))
</ul>

