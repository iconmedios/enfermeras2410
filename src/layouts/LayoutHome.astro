---

import Layout from "./Layout.astro";
import type { Props as SEOProps } from "@components/base/SeoHead.astro";
export interface Props {
	seo?: SEOProps;
	titlepage: string;
	subtitle?: string;
	bgimg?:string
}
const { seo, titlepage, subtitle, bgimg } = Astro.props as Props;

---
<Layout {seo} >
	<section id="page-head" class="relative text-brand-600/70  " >
		<div class="z-2 absolute top-0 left-0 w-full h-full bg-gradient-to-b from-white/60 via-10%  to-brand-100/10  "></div>
		<img class="object-cover object-b absolute top-0 left-0 h-full w-full opacity-50" src={bgimg} alt="mibg" >

	
		<div class="container flex icc pt-16 relative z-8 ">
            <div class=" text-center w-80% ">
                <h1 class="text-6 md:text-10 lg:text-12 xl:text-16 leading-1.2em pb-4 ">{titlepage}</h1>
                {subtitle && <p class="my-8">{subtitle}</p>}
				<span class="border-2 inline-flex py-4 px-6 bg-brand-300 text-white border-brand-300 hover:bg-brand-500 rounded-8">CUIDAMOS LO QUE M√ÅS AMAS</span>
            </div>
				
		</div>
	</section>
	<slot/>
</Layout>

